{
  "name": "Grackle",
  "version": "1.0.0",
  "description": "Fitness and Health",
  "main": "app.js",
  "scripts": {
    "app-watch": "nodemon -w app.js -w datastore app.js",
    "live-reload": "live-reload app.js datastore public --port=1009",
    "build-watch": "watch-spawn -p controllers/*.js -p model/*.js -p scripts/*.js npm run build",
    "test-watch": "watch-spawn -p .jshintrc -p *.js -p controllers/**/*.js -p model/**/*.js -p datastore/**/*.js -p scripts/**/*.js npm run test",
    "build": "npm run webpack && npm run uglify",
    "webpack": "webpack",
    "uglify": "uglifyjs public/scripts/grackle.js -o public/scripts/grackle.min.js",
    "test": "npm run lint && npm run jasmine",
    "jasmine": "jasmine",
    "lint": "npm run jshint && npm run eslint",
    "jshint": "npm run jshint-node && npm run jshint-browser",
    "jshint-node": "jshint --config .jshintrc-node app.js model datastore",
    "jshint-browser": "jshint --config .jshintrc-browser controllers model scripts",
    "eslint": "eslint app.js controllers model scripts datastore",
    "wc": "git ls-files | grep .js | xargs wc -l"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dabowheel/grackle.git"
  },
  "author": "Miguel Provencio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dabowheel/grackle/issues"
  },
  "homepage": "https://github.com/dabowheel/grackle",
  "dependencies": {
    "babel-polyfill": "^6.0.14",
    "connect-mongo": "^0.8.2",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-session": "^1.11.2",
    "mongodb": "^2.0.35",
    "nodemailer": "^1.8.0",
    "nodemailer-smtp-transport": "^1.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.0.14",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.14",
    "babelify": "^7.0.2",
    "eslint": "^1.7.3",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.1"
  }
}
